  <div class="row">
    <div class="col-3">
    <table class="table login-form">
      <h2>Login Here</h2>
      <%= form_for(:session, url: login_path) do |f| %>
        <tr>
          <td class="table-light"><%= f.text_field :email, placeholder: "Email" %></td>
        </tr>
        <tr>
          <td class="table-light"><%= f.password_field :password, placeholder: "Password"  %></td>
        </tr>
        <tr class="action">
          <td class="table-light"><%= f.submit "Login", class: "btn " %></td>
        </tr>
        <tr>
          <td class="table-light"><small>Don't have an account with us? <%= link_to "Create an account", new_user_path, class: "btn " %></small></td>
        </tr>
      <% end %>
    </table>
    </div>
  </div>

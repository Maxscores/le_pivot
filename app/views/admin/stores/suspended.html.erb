
<div class="container">
  <h3>All Stores</h3>
  <nav class="nav nav-tabs" id="myTab" role="tablist">
    <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-expanded="true">Suspended</a>
    <%= link_to "Active", admin_stores_path, class: "nav-item nav-link" %>
    <%= link_to "Pending", admin_stores_pending_path, class: "nav-item nav-link" %>
  </div>
  </nav>
  <div class="container">
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
 	      <table class="table table-hover">
          <thead>
            <tr>
              <th>Store</th>
              <th>Address</th>
              <th>Status</th>
            </tr>
          </thead>
             <tbody>
          <% @suspended_stores.each do |store| %>
            <tr>
              <th scope="row"> <%= link_to store.name, store_path(store.slug) %></th>
              <td><%= store.address %></td>
              <td><%= store.status.capitalize %></td>
            </tr>
            <% end %>
           </tbody>
       </table>
     </div>
    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">...</div>
    <div class="tab-pane fade" id="nav-dropdown1" role="tabpanel" aria-labelledby="nav-dropdown1-tab">...</div>
    <div class="tab-pane fade" id="nav-dropdown2" role="tabpanel" aria-labelledby="nav-dropdown2-tab">...</div>
  </div>
</div>

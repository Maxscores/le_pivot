<header class="header">
  <div class="container-fluid">
    <div id="logo" class="pull-left">
      <h1><%= link_to "Found Sound", root_path, class: "title" %></h1>
    </div>
      <nav class="nav-menu-container">
        <ul class="nav-menu">
          <% if current_user.nil? %>
          <li class="nav-item">
            <%= link_to 'Login', login_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Sign Up', new_user_path, class: "nav-link active" %>
          </li>
          <% elsif current_user && current_user.admin? %>
          <li class="nav-item">
            <%= link_to 'Dashboard', dashboard_index_path, class: "nav-link active" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Admin Dashboard', admin_dashboard_index_path, class: "nav-link active" %>
          </li>
          <% elsif current_user %>
          <li class="nav-item">
            <%= link_to 'Dashboard', dashboard_index_path, class: "nav-link active" %>
          </li>
          <% end %>
          <li class="nav-item ">
            <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Departments</a>
            <div class="dropdown-menu">
              <% @departments.each do |department| %>
                <%= link_to department.title, departments_department_path(department.slug), class: "dropdown-item" %>
              <% end %>
            </div>
          </li>
          <li class="nav-item">
            <%= link_to "Cart [#{@cart.total_count}]", cart_path, class: "nav-link active" %>
          </li>
          <% if current_user %>
          <li class="nav-item">
            <%= link_to 'Logout', logout_path, method: :delete, class: "nav-link active" %>
          </li>
          <% end %>
        </ul>
    </nav>
  </div>
</header>

<h3>Chatroom <%= current_user.chatroom.user_id %></h3>
<h4>User: <%=  current_user.first_name %> <%= current_user.last_name %></h4>

<div class="panel panel-default">
  <% if current_user.chatroom.chat_messages.any? %>
    <div class="panel-body" id="messages" data-chatroom=<%=current_user.chatroom.id%>>
      <% current_user.chatroom.chat_messages.each do |message| %>
        <span><%= message.user.first_name %>: <%= message.body %></span><br>
      <% end %>
    </div>
  <%else%>
    <div class="panel-body hidden" id="messages">
    </div>
  <%end%>
</div>

<%= render partial: 'messages/message_form', locals: {chat_message: @chat_message, chatroom: current_user.chatroom}%>

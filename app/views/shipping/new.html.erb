<h2>Shipping Address</h2>
<%= form_for :shipping, url: 'shipping/show' do |f| %>
  <%= f.text_field :street, placeholder: "Street", class: "shipping-street" %>
  <%= f.text_field :city, placeholder: "City", class: "shipping-city" %>
  <%= f.text_field :state, placeholder: "State", class: "shipping-state" %>
  <%= f.text_field :zip, placeholder: "Zipcode", class: "shipping-zip" %>
  <%= f.text_field :country, placeholder: "Country", class: "shipping-country" %>
  <%= f.text_field :phone, placeholder: "Phone number", class: "shipping-number" %>
  <br>
  <%= f.submit "Submit", class: "shipping-submit"%>
<% end %>

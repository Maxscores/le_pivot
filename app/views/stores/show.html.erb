<!DOCTYPE html>
<head>
  <meta charset="utf-8">
  <title>Found Sound - <%= @store.name.capitalize %></title>
</head>
<body>
  <h1 class="shop-name"><%= @store.name.capitalize %></h1>

  <div class="container">
    <div class="row">
      <% @store.active_items.each do |item| %>
        <div class="center-block">
          <div class="card border-white" style="width: 15rem;">
            <%= image_tag item.image.url, size: "250" %>
            <div class="card-body">
              <center><p><strong><%= link_to item.title, item_path(item) %></strong></p>
                <p>Description: <%= item.description %></p>
                <p>Price: <%= number_to_currency(item.price) %></p>
                <% unless item.retired? %>
                  <%= link_to "Add to cart", carts_path(item_id: item.id), method: :post, class: "btn btn-info btn-sm" %></center>
                <% else %>
                <div class="btn btn-primary btn-sm disabled">
                  Retired
                </div>
                <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</body>

<h3>Chatroom <%= @chatroom.id %></h3>
<h4>User: <%=  @chatroom.user.first_name %> <%= @chatroom.user.last_name %></h4>

<div class="admin-chat-tab">
  <div class="admin-chat-window">
    <% if @chatroom.chat_messages.any? %>
      <div class="admin-chat-messages" id="messages" data-chatroom=<%=@chatroom.id%>>
        <% @chatroom.chat_messages.each do |message| %>
          <span><%= message.user.first_name %>: <%= message.body %></span><br>
        <% end %>
      </div>
    <%end%>
  </div>
  <%= render partial: 'messages/message_form', locals: {chat_message: @chat_message, chatroom: @chatroom}%>
</div>
